{{ 'followers-section.css' | asset_url | stylesheet_tag }}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<div id="followers">
<div class="container">
  <div class="card">
    <div class="text">
      <h2>❤️ Join with our fans!</h2>
      <p>We're having thousands of the beautiful followers with us. You can ask any questions to us through open channels and connect with us.</p>
    </div>
  </div>
  <div class="card">
    <i class="fab fa-youtube"></i>
    <p class="counter" name="youtube">0</p>
    <p class="label">Youtube Subscriber's</p>
  </div>
  <div class="card">
    <i class="fab fa-twitter"></i>
    <p class="counter" name="twitter">0</p>
    <p class="label">Twitter Followers</p>
  </div>
  <div class="card">
    <i class="fab fa-instagram"></i>
    <p class="counter" name="instagram">0</p>
    <p class="label">Instagram Followers</p>
  </div>
</div>
</div>



{% schema %}
{
"name": "Promise",
"settings": [
],
"presets": [
{
"name": "Promise Section",
"category": "Promise"
}
],
"blocks": [
      {
        "type": "cards",
        "name": "Cards",
        "settings": [
        {
          "type": "header",
          "content": "Code Configurations" 
        },
        {
          "type": "text",
          "id": "class_name",
          "label": "Class Name"
        },
          {
            "type": "header",
            "content": "Cards Details" 
          },
          {
            "type": "text",
            "id": "title_first",
            "label": "Title First Line",
            "info": "e.g; 100% Certified"
          },
          {
            "type": "text",
            "id": "title_second",
            "label": "Title Second Line",
            "info": "e.g; Jewellery"
          },
          {
            "type": "header",
            "content": "Description"
          },
          {
            "type": "text",
            "id": "description_title",
            "label": "Description Title"
          },
          {
             "type": "richtext",
             "id": "description_text",
             "label": "Description"
           },
           {
            "type": "url",
            "id": "button_link",
            "label": "Select Readmore Link",
            "default": "/"
          },
          {
            "type": "text",
            "id": "readmore_link_text",
            "label": "Enter Readmore Link Text",
            "default": "Read more"
          }
        ]
      }
    ]
}
{% endschema %}
